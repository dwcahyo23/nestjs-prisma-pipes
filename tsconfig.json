{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true, // âœ… Add this
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node" // Keep as node for library
	},
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"**/*.spec.ts"
	]
}